<?xml version="1.0" encoding="utf-8"?>
<ScrollView android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white">

        <LinearLayout
            android:id="@+id/ll_form_register"
            android:layout_margin="10dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/tv_full_name"
                android:text="@string/full_name"
                android:paddingBottom="3dp"
                android:textColor="@color/fade"/>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp">
                <EditText
                    android:id="@+id/et_fullname"
                    android:hint="@string/full_name"
                    android:textColorHint="@color/fade"
                    android:textColorHighlight="@color/colorPrimary"
                    android:textColor="@color/colorPrimary"
                    android:defaultFocusHighlightEnabled="true"
                    android:background="@android:color/transparent"
                    android:padding="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp">
                <com.weiwangcn.betterspinner.library.material.MaterialBetterSpinner
                    android:id="@+id/spinner_jabatan"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/jabatan"
                    android:textColor="@color/colorPrimary"
                    android:layout_margin="10dp"
                    android:textColorHint="@color/fade"
                    app:met_floatingLabel="normal" />
            </android.support.v7.widget.CardView>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/tv_org_gereja"
                android:text="@string/org"
                android:paddingBottom="3dp"
                android:textColor="@color/fade"/>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp">
                <EditText
                    android:id="@+id/et_org_gereja"
                    android:hint="@string/org_gereja"
                    android:textColorHint="@color/fade"
                    android:textColorHighlight="@color/colorPrimary"
                    android:textColor="@color/colorPrimary"
                    android:defaultFocusHighlightEnabled="true"
                    android:background="@android:color/transparent"
                    android:padding="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </android.support.v7.widget.CardView>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/tv_umur"
                android:text="@string/umur"
                android:paddingBottom="3dp"
                android:textColor="@color/fade"/>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp">
                <EditText
                    android:id="@+id/et_umur"
                    android:hint="@string/umur"
                    android:inputType="number"
                    android:padding="10dp"
                    android:textColorHint="@color/fade"
                    android:textColorHighlight="@color/colorPrimary"
                    android:textColor="@color/colorPrimary"
                    android:background="@android:color/transparent"
                    android:defaultFocusHighlightEnabled="true"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </android.support.v7.widget.CardView>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/tv_no_ktp"
                android:text="@string/no_ktp"
                android:paddingBottom="3dp"
                android:textColor="@color/fade"/>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp">
                <EditText
                    android:id="@+id/et_no_ktp"
                    android:hint="@string/no_ktp"
                    android:textColorHint="@color/fade"
                    android:textColorHighlight="@color/colorPrimary"
                    android:background="@android:color/transparent"
                    android:textColor="@color/colorPrimary"
                    android:defaultFocusHighlightEnabled="true"
                    android:padding="10dp"
                    android:inputType="number"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp">
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/tv_bersama_istri"
                        android:text="@string/bersama_istri"
                        android:padding="10dp"
                        android:textColor="@color/fade"/>
                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <CheckBox
                            android:id="@+id/cb_bersama_istri"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight=".5"
                            android:text="@string/ya"/>
                        <CheckBox
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight=".5"
                            android:id="@+id/cb_tidak_bersama_istri"
                            android:text="@string/tidak"/>
                    </LinearLayout>
                    <EditText
                        android:id="@+id/et_nama_istri"
                        android:hint="@string/nama_istri"
                        android:textColorHint="@color/fade"
                        android:textColorHighlight="@color/colorPrimary"
                        android:textColor="@color/colorPrimary"
                        android:defaultFocusHighlightEnabled="true"
                        android:background="@android:color/transparent"
                        android:padding="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:visibility="gone"/>
                </LinearLayout>
            </android.support.v7.widget.CardView>


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/tv_alamat"
                android:text="@string/alamat"
                android:paddingBottom="3dp"
                android:textColor="@color/fade"/>
            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp">
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <EditText
                        android:id="@+id/et_alamat"
                        android:hint="@string/isi_alamat"
                        android:padding="10dp"
                        android:textColorHint="@color/fade"
                        android:textColorHighlight="@color/colorPrimary"
                        android:textColor="@color/colorPrimary"
                        android:background="@android:color/transparent"
                        android:defaultFocusHighlightEnabled="true"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                    <LinearLayout
                        android:layout_margin="5dp"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <EditText
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight=".5"
                            android:textColor="@color/colorPrimary"
                            android:id="@+id/et_provinsi"
                            android:hint="@string/provinsi"
                            android:textColorHighlight="@color/colorPrimary"
                            android:textColorHint="@color/fade"/>
                        <EditText
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight=".5"
                            android:textColor="@color/colorPrimary"
                            android:id="@+id/et_kabupaten_kota"
                            android:hint="@string/kabupaten_kota"
                            android:textColorHighlight="@color/colorPrimary"
                            android:textColorHint="@color/fade"/>
                    </LinearLayout>
                </LinearLayout>
            </android.support.v7.widget.CardView>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/tv_no_telepon"
                android:text="@string/no_telepon"
                android:paddingBottom="3dp"
                android:textColor="@color/fade"/>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp">
                <EditText
                    android:id="@+id/et_no_telepon"
                    android:hint="@string/no_telepon"
                    android:inputType="phone"
                    android:textColorHint="@color/fade"
                    android:textColorHighlight="@color/colorPrimary"
                    android:background="@android:color/transparent"
                    android:textColor="@color/colorPrimary"
                    android:defaultFocusHighlightEnabled="true"
                    android:padding="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </android.support.v7.widget.CardView>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/tv_tgl_keberangkatan"
                android:text="@string/tgl_keberangkatan"
                android:paddingBottom="3dp"
                android:textColor="@color/fade"/>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp">
                <TextView
                    android:padding="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/v_tgl_keberangkatan"
                    android:text="@string/tgl_keberangkatan"
                    android:textColor="@color/colorPrimary"/>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp">
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/tv_bandara_hotel"
                        android:text="@string/bandara_hotel"
                        android:padding="10dp"
                        android:textColor="@color/fade"/>
                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <CheckBox
                            android:id="@+id/cb_diurusPanitia_bandara_hotel"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight=".5"
                            android:text="@string/ya"/>
                        <CheckBox
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight=".5"
                            android:id="@+id/cb_tidakDiurusPanitia_bandara_hotel"
                            android:text="@string/tidak"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <EditText
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight=".5"
                            android:textColorHint="@color/fade"
                            android:textColorHighlight="@color/colorPrimary"
                            android:defaultFocusHighlightEnabled="true"
                            android:background="@android:color/transparent"
                            android:hint="@string/waktuBerangkat"
                            android:id="@+id/et_bandara_hotel_waktuBerangkat"
                            android:layout_margin="5dp"
                            android:visibility="gone"/>
                        <EditText
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight=".5"
                            android:textColorHint="@color/fade"
                            android:textColorHighlight="@color/colorPrimary"
                            android:defaultFocusHighlightEnabled="true"
                            android:background="@android:color/transparent"
                            android:hint="@string/waktuPulang"
                            android:id="@+id/et_bandara_hotel_waktuPulang"
                            android:layout_margin="5dp"
                            android:visibility="gone"/>
                    </LinearLayout>
                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColorHint="@color/fade"
                        android:textColorHighlight="@color/colorPrimary"
                        android:defaultFocusHighlightEnabled="true"
                        android:background="@android:color/transparent"
                        android:hint="@string/keterangan"
                        android:id="@+id/et_keterangan_bandara_hotel"
                        android:layout_margin="5dp"
                        android:visibility="gone"/>
                </LinearLayout>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp">
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/tv_hotel_acara"
                        android:text="@string/hotel_acara"
                        android:padding="10dp"
                        android:textColor="@color/fade"/>
                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <CheckBox
                            android:id="@+id/cb_diurusPanitia_hotel_acara"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight=".5"
                            android:text="@string/ya"/>
                        <CheckBox
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight=".5"
                            android:id="@+id/cb_tidakDiurusPanitia_hotel_acara"
                            android:text="@string/tidak"/>
                    </LinearLayout>
                    <com.weiwangcn.betterspinner.library.material.MaterialBetterSpinner
                        android:id="@+id/spinner_jenis_transport"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/jenis_transport"
                        android:layout_margin="5dp"
                        android:textColorHint="@color/fade"
                        app:met_floatingLabel="normal"
                        android:visibility="gone"/>

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColorHint="@color/fade"
                        android:textColorHighlight="@color/colorPrimary"
                        android:defaultFocusHighlightEnabled="true"
                        android:background="@android:color/transparent"
                        android:hint="@string/keterangan"
                        android:id="@+id/et_keterangan_hotel_acara"
                        android:layout_margin="5dp"
                        android:visibility="gone"/>
                </LinearLayout>
            </android.support.v7.widget.CardView>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/tv_akomodasi"
                android:text="@string/akomodasi"
                android:paddingBottom="3dp"
                android:textColor="@color/fade"/>
            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp">
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <com.weiwangcn.betterspinner.library.material.MaterialBetterSpinner
                        android:id="@+id/spinner_hotel"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/nama_hotel"
                        android:layout_margin="10dp"
                        android:textColorHint="@color/fade"
                        app:met_floatingLabel="normal" />
                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <com.weiwangcn.betterspinner.library.material.MaterialBetterSpinner
                            android:id="@+id/spinner_tipe_kamar"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight=".5"
                            android:hint="@string/tipe_kamar"
                            android:layout_margin="10dp"
                            android:textColorHint="@color/fade"
                            app:met_floatingLabel="normal" />
                        <com.weiwangcn.betterspinner.library.material.MaterialBetterSpinner
                            android:id="@+id/spinner_bed"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight=".5"
                            android:hint="@string/bed"
                            android:layout_margin="10dp"
                            android:textColorHint="@color/fade"
                            app:met_floatingLabel="normal" />
                    </LinearLayout>
                </LinearLayout>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp">
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/tv_konsumsi"
                        android:text="@string/konsumsi"
                        android:padding="10dp"
                        android:textColor="@color/fade"/>
                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <CheckBox
                            android:id="@+id/cb_konsumsiD1"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight=".3"
                            android:text="@string/konsumsiD1"/>
                        <CheckBox
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight=".3"
                            android:id="@+id/cb_konsumsiD2"
                            android:text="@string/konsumsiD2"/>
                        <CheckBox
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight=".3"
                            android:id="@+id/cb_konsumsiD3"
                            android:text="@string/konsumsiD3"/>
                    </LinearLayout>
                </LinearLayout>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp">
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/tv_total_harga"
                        android:text="@string/total_harga"
                        android:padding="10dp"
                        android:textColor="@color/fade"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/v_total_harga"
                        android:text="@string/total_harga"
                        android:padding="10dp"
                        android:textSize="30sp"
                        android:textStyle="bold"
                        android:textColor="@color/fade"
                        android:visibility="gone"/>
                </LinearLayout>
            </android.support.v7.widget.CardView>
        </LinearLayout>

        <RelativeLayout
            android:layout_below="@id/ll_form_register"
            android:layout_alignParentBottom="true"
            android:id="@+id/rl_btn_register"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <Button
                android:layout_alignParentBottom="true"
                android:textColor="#ffffff"
                android:background="@color/colorPrimaryDark"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/btn_register"
                android:text="@string/daftar"/>
        </RelativeLayout>
    </RelativeLayout>
</ScrollView>