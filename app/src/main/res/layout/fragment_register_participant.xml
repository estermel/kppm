<?xml version="1.0" encoding="utf-8"?>
<ScrollView android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white_greyish">

        <LinearLayout
            android:id="@+id/ll_form_register"
            android:layout_margin="15dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/tv_full_name"
                android:text="@string/full_name"
                android:paddingBottom="3dp"
                android:textColor="@color/fade"/>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp">
                <EditText
                    android:id="@+id/et_fullname"
                    android:hint="@string/full_name"
                    android:textColorHint="@color/fade"
                    android:textColorHighlight="@color/colorPrimary"
                    android:textColor="@color/colorPrimary"
                    android:defaultFocusHighlightEnabled="true"
                    android:background="@android:color/transparent"
                    android:padding="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp">
                <com.weiwangcn.betterspinner.library.material.MaterialBetterSpinner
                    android:id="@+id/spinner_jabatan"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/jabatan"
                    android:textColor="@color/colorPrimary"
                    android:layout_margin="10dp"
                    android:textColorHint="@color/fade"
                    app:met_floatingLabel="normal" />
            </android.support.v7.widget.CardView>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/tv_org_gereja"
                android:text="@string/org"
                android:paddingBottom="3dp"
                android:textColor="@color/fade"/>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp">
                <EditText
                    android:id="@+id/et_org_gereja"
                    android:hint="@string/org_gereja"
                    android:textColorHint="@color/fade"
                    android:textColorHighlight="@color/colorPrimary"
                    android:textColor="@color/colorPrimary"
                    android:defaultFocusHighlightEnabled="true"
                    android:background="@android:color/transparent"
                    android:padding="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </android.support.v7.widget.CardView>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/tv_umur"
                android:text="@string/umur"
                android:paddingBottom="3dp"
                android:textColor="@color/fade"/>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp">
                <EditText
                    android:id="@+id/et_umur"
                    android:hint="@string/umur"
                    android:inputType="number"
                    android:padding="10dp"
                    android:textColorHint="@color/fade"
                    android:textColorHighlight="@color/colorPrimary"
                    android:textColor="@color/colorPrimary"
                    android:background="@android:color/transparent"
                    android:defaultFocusHighlightEnabled="true"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </android.support.v7.widget.CardView>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/tv_no_ktp"
                android:text="@string/no_ktp"
                android:paddingBottom="3dp"
                android:textColor="@color/fade"/>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp">

                <EditText
                    android:id="@+id/et_no_ktp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@android:color/transparent"
                    android:defaultFocusHighlightEnabled="true"
                    android:hint="@string/no_ktp"
                    android:inputType="number"
                    android:padding="10dp"
                    android:textColor="@color/colorPrimary"
                    android:textColorHighlight="@color/colorPrimary"
                    android:textColorHint="@color/fade" />
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="5dp">

                    <TextView
                        android:id="@+id/tv_bersama_istri"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="10dp"
                        android:text="@string/bersama_istri"
                        android:textColor="@color/fade" />

                    <RadioGroup
                        android:orientation="horizontal"
                        android:id="@+id/rg_istri"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                            <RadioButton
                                android:id="@+id/rb_bersama_istri"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight=".5"
                                android:text="@string/ya" />
                            <RadioButton
                                android:id="@+id/rb_tidak_bersama_istri"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight=".5"
                                android:text="@string/tidak" />
                    </RadioGroup>

                    <EditText
                        android:id="@+id/et_nama_istri"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@android:color/transparent"
                        android:defaultFocusHighlightEnabled="true"
                        android:hint="@string/nama_istri"
                        android:padding="10dp"
                        android:textColor="@color/colorPrimary"
                        android:textColorHighlight="@color/colorPrimary"
                        android:textColorHint="@color/fade" />
                </LinearLayout>
            </android.support.v7.widget.CardView>


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/tv_alamat"
                android:text="@string/alamat"
                android:paddingBottom="3dp"
                android:textColor="@color/fade"/>
            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="5dp">

                    <EditText
                        android:id="@+id/et_alamat"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@android:color/transparent"
                        android:defaultFocusHighlightEnabled="true"
                        android:hint="@string/isi_alamat"
                        android:padding="10dp"
                        android:textColor="@color/colorPrimary"
                        android:textColorHighlight="@color/colorPrimary"
                        android:textColorHint="@color/fade" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:orientation="horizontal">

                        <EditText
                            android:id="@+id/et_provinsi"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="5dp"
                            android:layout_weight=".5"
                            android:hint="@string/provinsi"
                            android:textColor="@color/colorPrimary"
                            android:textColorHighlight="@color/colorPrimary"
                            android:textColorHint="@color/fade" />

                        <EditText
                            android:id="@+id/et_kabupaten_kota"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5dp"
                            android:layout_weight=".5"
                            android:hint="@string/kabupaten_kota"
                            android:textColor="@color/colorPrimary"
                            android:textColorHighlight="@color/colorPrimary"
                            android:textColorHint="@color/fade" />
                    </LinearLayout>
                </LinearLayout>
            </android.support.v7.widget.CardView>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/tv_no_telepon"
                android:text="@string/no_telepon"
                android:paddingBottom="3dp"
                android:textColor="@color/fade"/>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp">
                <EditText
                    android:id="@+id/et_no_telepon"
                    android:hint="@string/no_telepon"
                    android:inputType="phone"
                    android:textColorHint="@color/fade"
                    android:textColorHighlight="@color/colorPrimary"
                    android:background="@android:color/transparent"
                    android:textColor="@color/colorPrimary"
                    android:defaultFocusHighlightEnabled="true"
                    android:padding="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </android.support.v7.widget.CardView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight=".5">
                    <TextView
                        android:id="@+id/tv_tgl_keberangkatan"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="10dp"
                        android:text="@string/waktu_keberangkatan"
                        android:textColor="@color/fade" />

                    <android.support.v7.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dp"
                        android:layout_marginRight="7dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:padding="5dp">

                            <TextView
                                android:id="@+id/v_tgl_keberangkatan"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:padding="10dp"
                                android:textSize="15sp"
                                android:text="@string/tgl_keberangkatan"
                                android:textColor="@color/colorPrimary" />

                            <TextView
                                android:id="@+id/v_jam_keberangkatan"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:padding="10dp"
                                android:textSize="15sp"
                                android:text="@string/jam_keberangkatan"
                                android:textColor="@color/colorPrimary" />
                        </LinearLayout>
                    </android.support.v7.widget.CardView>
                </LinearLayout>

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight=".5">
                    <TextView
                        android:id="@+id/tv_tgl_kepulangan"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="10dp"
                        android:text="@string/waktu_kepulangan"
                        android:textColor="@color/fade" />

                    <android.support.v7.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dp"
                        android:layout_marginLeft="8dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:padding="5dp">

                            <TextView
                                android:id="@+id/v_tgl_kepulangan"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:padding="10dp"
                                android:textSize="15sp"
                                android:text="@string/tgl_kepulangan"
                                android:textColor="@color/colorPrimary" />

                            <TextView
                                android:id="@+id/v_jam_kepulangan"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:padding="10dp"
                                android:textSize="15sp"
                                android:text="@string/jam_kepulangan"
                                android:textColor="@color/colorPrimary" />
                        </LinearLayout>
                    </android.support.v7.widget.CardView>
                </LinearLayout>
            </LinearLayout>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="5dp">

                    <TextView
                        android:id="@+id/tv_bandara_hotel"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="10dp"
                        android:text="@string/bandara_hotel"
                        android:textColor="@color/fade" />
                    <RadioGroup
                        android:orientation="horizontal"
                        android:id="@+id/rg_bandara_hotel"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                            <RadioButton
                                android:id="@+id/rb_diurusPanitia_bandara_hotel"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight=".5"
                                android:text="@string/ya" />
                            <RadioButton
                                android:id="@+id/rb_tidakDiurusPanitia_bandara_hotel"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight=".5"
                                android:text="@string/tidak" />
                    </RadioGroup>

                    <EditText
                        android:id="@+id/et_keterangan_bandara_hotel"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:background="@android:color/transparent"
                        android:defaultFocusHighlightEnabled="true"
                        android:hint="@string/keterangan"
                        android:textColorHighlight="@color/colorPrimary"
                        android:textColorHint="@color/fade" />
                </LinearLayout>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="5dp">

                    <TextView
                        android:id="@+id/tv_hotel_acara"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="10dp"
                        android:text="@string/hotel_acara"
                        android:textColor="@color/fade" />

                    <RadioGroup
                        android:orientation="horizontal"
                        android:id="@+id/rg_hotel_acara"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                            <RadioButton
                                android:id="@+id/rb_diurusPanitia_hotel_acara"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight=".5"
                                android:text="@string/ya" />
                            <RadioButton
                                android:id="@+id/rb_tidakDiurusPanitia_hotel_acara"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight=".5"
                                android:text="@string/tidak" />
                    </RadioGroup>

                    <com.weiwangcn.betterspinner.library.material.MaterialBetterSpinner
                        android:id="@+id/spinner_jenis_transport"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:hint="@string/jenis_transport"
                        android:textColorHint="@color/fade"
                        app:met_floatingLabel="normal" />

                    <EditText
                        android:id="@+id/et_keterangan_hotel_acara"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:background="@android:color/transparent"
                        android:defaultFocusHighlightEnabled="true"
                        android:hint="@string/keterangan"
                        android:textColorHighlight="@color/colorPrimary"
                        android:textColorHint="@color/fade" />
                </LinearLayout>
            </android.support.v7.widget.CardView>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/tv_akomodasi"
                android:text="@string/akomodasi"
                android:paddingBottom="3dp"
                android:textColor="@color/fade"/>
            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp">
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <com.weiwangcn.betterspinner.library.material.MaterialBetterSpinner
                        android:id="@+id/spinner_hotel"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/nama_hotel"
                        android:layout_margin="10dp"
                        android:textColorHint="@color/fade"
                        app:met_floatingLabel="normal" />
                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <com.weiwangcn.betterspinner.library.material.MaterialBetterSpinner
                            android:id="@+id/spinner_tipe_kamar"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight=".5"
                            android:hint="@string/tipe_kamar"
                            android:layout_margin="10dp"
                            android:textColorHint="@color/fade"
                            app:met_floatingLabel="normal" />
                        <com.weiwangcn.betterspinner.library.material.MaterialBetterSpinner
                            android:id="@+id/spinner_bed"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight=".5"
                            android:hint="@string/bed"
                            android:layout_margin="10dp"
                            android:textColorHint="@color/fade"
                            app:met_floatingLabel="normal" />
                    </LinearLayout>
                </LinearLayout>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp">
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/tv_konsumsi"
                        android:text="@string/konsumsi"
                        android:padding="10dp"
                        android:textColor="@color/fade"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"
                        android:textSize="10sp"
                        android:text="@string/ket_konsumsi_harga"/>
                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="5dp">
                        <CheckBox
                            android:id="@+id/cb_konsumsi1"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight=".3"
                            android:text="@string/konsumsi1"/>
                        <CheckBox
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight=".3"
                            android:id="@+id/cb_konsumsi2"
                            android:text="@string/konsumsi2"/>
                    </LinearLayout>
                </LinearLayout>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp">
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/tv_total_harga"
                        android:text="@string/total_harga"
                        android:padding="10dp"
                        android:textColor="@color/fade"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/v_total_harga"
                        android:text="@string/total_harga"
                        android:padding="10dp"
                        android:textSize="20sp"
                        android:textColor="@color/fade"/>
                </LinearLayout>
            </android.support.v7.widget.CardView>
        </LinearLayout>

        <RelativeLayout
            android:layout_below="@id/ll_form_register"
            android:layout_alignParentBottom="true"
            android:id="@+id/rl_btn_register"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <Button
                android:layout_alignParentBottom="true"
                android:textColor="#ffffff"
                android:background="@color/colorPrimaryDark"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/btn_register"
                android:text="@string/daftar"/>
        </RelativeLayout>
    </RelativeLayout>
</ScrollView>